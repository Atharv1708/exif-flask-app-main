pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                bat 'C:\\Python39\\python.exe -m pip install -r requirements.txt'
                // OR if Python is in Program Files:
                // bat '"C:\\Program Files\\Python39\\python.exe" -m pip install -r requirements.txt'
            }
        }
        
        stage('Run Tests') {
            steps {
                bat 'C:\\Python39\\python.exe -m pytest tests/'
            }
stage('Install Dependencies') {
    steps {
        bat '''
            python -m venv venv
            call venv\\Scripts\\activate
            pip install -r requirements.txt
        '''
    }
}
stage('Run Tests') {
    steps {
        bat '''
            call venv\\Scripts\\activate
            pytest tests/
        '''
    }
}
        }
    }
}
