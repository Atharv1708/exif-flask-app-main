pipeline {
    agent any
    
    environment {
        // Set Python path here, ensuring it matches the installation on your system
        PYTHON = 'C:\\Users\\Dell\\AppData\\Local\\Programs\\Python\\Python313\\python.exe'  // Update this path based on your Python installation
        VENV_DIR = "${WORKSPACE}\\venv"
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup Python Environment') {
            steps {
                bat """
                    IF EXIST "${VENV_DIR}" (
                        rmdir /s /q "${VENV_DIR}"
                    )
                    "${PYTHON}" -m venv "${VENV_DIR}"
                """
            }
        }
        
        stage('Install Dependencies') {
            steps {
                bat """
                    call "${VENV_DIR}\\Scripts\\activate"
                    pip install --upgrade pip
                    pip install -r requirements.txt
                """
            }
        }
        
        stage('Run Tests') {
            steps {
                bat """
                    call "${VENV_DIR}\\Scripts\\activate"
                    pytest tests/ --junitxml=test-results.xml
                """
            }
            post {
                always {
                    junit '/test-results.xml'  // Adjust to the correct path of your test results
                }
            }
        }
        
        stage('Run Application') {
            steps {
                bat """
                    call "${VENV_DIR}\\Scripts\\activate"
                    start "" "flask run --host=0.0.0.0 --port=5001"
                """
                // Wait for Flask to start (adjust sleep time as needed)
                sleep 10
            }
        }
        
        // Docker Build and Deploy Stages
        stage('Build Docker Image') {
            steps {
                script {
                    // Using bat to run Docker build on Windows
                    bat 'docker build -t exif-flask-app .'
                }
            }
        }
        
        stage('Deploy Docker Container') {
            steps {
                script {
                    // Corrected port mapping to 5001 and using bat to run docker on Windows
                    bat 'docker run -d -p 5001:5001 exif-flask-app'
                }
            }
        }
    }
    
    post {
        always {
            // Clean up processes
            bat 'taskkill /F /IM python.exe /T 2>nul || exit 0'
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
